{
  "name": "hype",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "body-parser": "^1.18.2",
    "chart.js": "^1.1.1",
    "concurrently": "^3.5.1",
    "express": "^4.16.2",
    "nedb": "^1.8.0",
    "npm": "^5.7.1",
    "react": "^16.2.0",
    "react-chartjs": "^1.2.0",
    "react-dom": "^16.2.0",
    "react-scripts": "1.0.17",
    "uuid": "^3.2.1"
  },
  "scripts": {
    "start": "PORT=5000 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "hype": "concurrently --kill-others-on-fail \"cd server && node server.js\" \"cd metrics && node metrics.js\" \"npm start\""
  },
  "proxy": {
    "/api": {
      "target": "http://localhost:5100/",
      "changeOrigin": true
    },
    "/config": {
      "target": "http://localhost:5100/",
      "changeOrigin": true
    },
    "/metrics": {
      "target": "http://localhost:5500/",
      "changeOrigin": true
    }
  }
}
